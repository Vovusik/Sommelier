<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_overlapTop="@dimen/big_activity_margin_vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.DetailsActivity"
    tools:showIn="@layout/details_activity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_activity_margin_horizontal"
        android:layout_marginEnd="@dimen/big_activity_margin_horizontal"
        android:layout_marginBottom="@dimen/text_margin">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rowBackground"
            android:orientation="vertical"
            android:paddingLeft="@dimen/big_activity_text_margin"
            android:paddingRight="@dimen/big_activity_text_margin"
            android:paddingBottom="@dimen/big_activity_text_margin">

            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lineSpacingExtra="@dimen/text_margin_very_small"
                android:fontFamily="@font/open_sans_regular"
                android:paddingTop="@dimen/big_activity_text_margin"
                android:paddingBottom="@dimen/big_activity_text_margin"
                android:textColor="@color/textColorSecondary"
                android:textIsSelectable="true"
                tools:text="Детальний пис сорту винограда" />

            <TextView
                android:id="@+id/text_link"
                android:layout_width="match_parent"
                android:fontFamily="@font/open_sans_regular"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/colorAccent"
                tools:ignore="OnClick" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>


